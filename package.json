{
  "name": "alimentometro-wrapper",
  "version": "1.0.0",
  "description": "Um wrapper para trabalhar com a Relação de Fatores de Correção e Índice de Conversão (Cocção de Alimentos).",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:watch": "npm run build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename alimentometro-wrapper.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename alimentometro-wrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alanpinhel/alimentometro-wrapper.git"
  },
  "keywords": [
    "js",
    "library",
    "fator de correção",
    "índice de conversão",
    "fator de cocção",
    "alimento",
    "quantidade necessária",
    "estimativa de rendimento"
  ],
  "author": "Alan Pinhel <alanpinhel@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alanpinhel/alimentometro-wrapper/issues"
  },
  "homepage": "https://github.com/alanpinhel/alimentometro-wrapper#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "coveralls": "^3.0.2",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "mock-require": "^3.0.3",
    "nyc": "^10.2.0",
    "rimraf": "^2.6.1",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "webpack": "^2.7.0"
  },
  "dependencies": {
    "intl": "^1.2.5"
  }
}
